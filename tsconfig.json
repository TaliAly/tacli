{
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
    },
    "allowJs": true,
    "outDir": "dist",
    "lib": ["es2022"],
    "sourceMap": true,
    "target": "es2022",
    "module": "NodeNext",
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "moduleResolution": "NodeNext",
    "noUncheckedIndexedAccess": true,
  },
  "exclude": [
    "dist",
    "node_modules",
    "eslint.config.cjs"
  ]
}
