{
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "allowJs": true,
    "outDir": "dist",
    "lib": ["es2022"],
    "sourceMap": true,
    "target": "es2022",
    "module": "NodeNext",
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "moduleResolution": "NodeNext",
    "noUncheckedIndexedAccess": true,
  }
}
